<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/rl_container"
    android:padding="0dp"
    android:id="@+id/rl_loan_item">
    <ImageView
        android:id="@+id/iv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon01"
        android:padding="15dp"/>
    <LinearLayout
        android:layout_toRightOf="@id/iv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单期借款"
                android:textSize="18sp"
                android:textColor="@color/black" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐"
                android:textColor="@color/red"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:background="@drawable/text_recommend_bg"
                android:layout_gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_user_quota"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的额度4600元"
            android:drawableRight="@mipmap/icon02"
            android:drawablePadding="5dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我要借款"
        android:drawableRight="@mipmap/arrow_rt"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:textColor="@color/red"/>
</RelativeLayout>